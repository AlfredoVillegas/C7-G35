{
  "name": "backend",
  "version": "1.0.0",
  "description": "backend for App pets",
  "scripts": {
    "start": "NODE_ENV=production node dist/src/api/server.js",
    "dev": "ts-node ./src/api/server",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:coverage": "jest --coverage",
    "build": "npm run build:clean && npm run build:tsc && npm run build:docs:swagger && npm run build:copy",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:copy": "copyfiles 'src/**/*.{json,yaml,html,png,ico,css,js}' 'dist/'",
    "build:clean": "rm -r dist; exit 0",
    "build:docs:swagger": "tsoa spec",
    "typeorm": "typeorm-ts-node-esm",
    "sync:typeorm:schema": "ts-node ./src/database/syncTypeOrmSchema.ts"  
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "better-sqlite3": "^7.5.0",
    "cloudinary": "^1.32.0",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.14.2",
    "glob": "^8.0.3",
    "http-status": "^1.5.3",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0",
    "passport-facebook": "^3.0.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.5.0",
    "tsoa": "^4.1.3",
    "typeorm": "^0.3.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/glob": "^8.0.0",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/passport": "^1.0.11",
    "@types/passport-facebook": "^2.1.11",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.3",
    "@types/uuid-validate": "^0.0.1",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "supertest": "^6.2.4",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.6.2"
  }
}
